<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <OurUmbracoBlockPreviewContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Umbraco.Community.BlockPreview\**\*.*</OurUmbracoBlockPreviewContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyOurUmbracoBlockPreviewAssets" BeforeTargets="Build">
        <ItemGroup>
            <OurUmbracoBlockPreviewContentFiles Include="$(OurUmbracoBlockPreviewContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Umbraco.Community.BlockPreview files: $(OurUmbracoBlockPreviewContentFilesPath) - #@(OurUmbracoBlockPreviewContentFiles->Count()) files" Importance="high" />
        <Copy SourceFiles="@(OurUmbracoBlockPreviewContentFiles)" DestinationFiles="@(OurUmbracoBlockPreviewContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Umbraco.Community.BlockPreview\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
    </Target>
    
    <Target Name="ClearOurUmbracoBlockPreviewAssets" BeforeTargets="Clean">
        <ItemGroup>
            <OurUmbracoBlockPreviewDir Include="$(MSBuildProjectDirectory)\App_Plugins\Umbraco.Community.BlockPreview\" />
        </ItemGroup>
        <Message Text="Clear old Umbraco.Community.BlockPreview data" Importance="high" />
        <RemoveDir Directories="@(OurUmbracoBlockPreviewDir)" />
    </Target>
</Project>
